<article>
  <% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Your Cart</h2>
  <table>

    <%= render(cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <!--I know that the following is supposed to be a td in the sample code, but it is a th in the image, and that looks better so I made it a th-->
        <th class="price"><%= number_to_currency(@cart.total_price) %></th>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Empty cart', cart,
  method: :delete,
  data: { confirm: 'Are you sure' } %>

</article>
